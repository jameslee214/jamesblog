<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:jamesblog.UI.Units">

    <Style TargetType="units:MenuListItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:MenuListItem">
                    <Grid>
                        <TextBlock Text="{x:Binding Name}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
